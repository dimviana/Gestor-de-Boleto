{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": ["api/**/*.ts", "config/**/*.ts", "types.ts", "translations.ts"],
  "exclude": ["node_modules", "dist", "components", "contexts", "hooks", "public"]
}
